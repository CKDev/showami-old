<%= content_for(:subnav) { render "shared/users/subnav_buyers_requests" } %>

<h2>My Requests for Showings</h2>

<% if @showings.size > 0 %>
  <% @showings.each do |showing| %>
    <%= render partial: "shared/showing/showing", locals: { showing: showing } %>
  <% end %>
  <div class="align-right">
    <%= will_paginate @showings %>
  </div>
<% else %>
  <p class="note">You do not have any showings yet. To get started select
    <%= link_to "New Request", new_users_buyers_request_path %>.</p>
<% end %>
