<div class="showing">
  <div class="row">
    <div class="three columns">
      <%= render partial: "shared/showing/calendar", locals: { showing: showing } %>
    </div>
    <div class="nine columns">
      <div class="address">
        <h4><%= showing.address %></h4>
      </div>
      <p><strong>MLS #: </strong><%= showing.mls %></p>

      <% if showing.buyer_info_visible?(current_user) %>
        <%= render partial: "shared/showing/buyer_info", locals: { showing: showing } %>
      <% end %>

      <% if showing.showing_agent_visible?(current_user) %>
        <%= render partial: "shared/showing/showing_agent_info", locals: { showing: showing } %>
      <% end %>

      <% if showing.notes_visible?(current_user) %>
        <p class="note"><strong>Notes:</strong> <%= showing.notes %></p>
      <% end %>

      <% if buyers_requests_route? %>
        <%= render partial: "shared/showing/buyers_agent_actions", locals: { showing: showing } %>
      <% elsif showing_appointments_route? %>
        <%= render partial: "shared/showing/showing_assistant_actions", locals: { showing: showing } %>
      <% elsif showing_opportunities_route? %>
        <%= render partial: "shared/showing/showing_opportunities_actions", locals: { showing: showing } %>
      <% end %>

    </div>
  </div>
</div>
