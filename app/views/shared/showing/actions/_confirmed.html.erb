<% if type == :buyers_agent %>
  <p class="status">Status: <span class="orange">Confirmed</span></p>
  <%= form_for showing, url: cancel_users_buyers_request_path(showing), method: :post do |f| %>
    <%# TODO: this confirm language is bad, ok to cancel and cancel not to cancel? %>
    <%= f.submit "Cancel", class: "button-secondary", data: { confirm: "Are you sure you want to cancel this showing?" } %>
  <% end %>
<% elsif type == :showing_assistant %>
  <p class="status">Status: <span class="orange">Confirmed</span></p>
  <%= form_for showing, url: cancel_users_showing_appointment_path(showing), method: :post do |f| %>
    <%# TODO: this confirm language is bad, ok to cancel and cancel not to cancel? %>
    <%= f.submit "Cancel", class: "button-secondary", data: { confirm: "Are you sure you want to cancel this showing?" } %>
  <% end %>
<% elsif type == :showing_opportunities %>
  <% if showing.showing_agent == current_user %>
    <p class="status">Status: <span class="orange">Confirmed</span></p>
    <%= form_for showing, url: cancel_users_showing_appointment_path(showing), method: :post do |f| %>
      <%# TODO: this confirm language is bad, ok to cancel and cancel not to cancel? %>
      <%= f.submit "Cancel", class: "button-secondary", data: { confirm: "Are you sure you want to cancel this showing?" } %>
    <% end %>
  <% else %>
    <p class="status">Status: <span class="orange">Reserved</span></p>
  <% end %>
<% end %>
